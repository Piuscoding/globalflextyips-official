<div class="table-responsive">
  <%if(plan != ''){%>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">S/N</th>
        <th scope="col">Payment Method</th>
        <th scope="col">Amount</th>
        <th scope="col">Status</th>
        <!-- <th scope="col">Narration</th> -->
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <%  plan.forEach((element, index) => {  %>
        <tr class="align-middle">
          <td> <h5><%= index %></h5> </td>
          <td> <h5><%= element.payment_method %></h5> </td>
          <td><h5><%= element.amount %></h5>  </td>
          <td><h5><%= element.status %></h5> </td>
          <!-- <td><img src="element.image%>" alt="Image" style="width: 50px; height: fit-content;" ></td> -->
          <td><h5>  <%=element.narration %></h5>  </td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="/view-plan/<%= element._id %> " type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="/edit-plan/<%= element._id %> " type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
              <form action="/deletePlan/<%=element._id%>?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-danger btn-small">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <% }else{%>
    <h1 class="text-center text-secondary mt-5">No investment  found yet!</h1>
    <% } %>

  <div class="btn-toolbar mb-2 mb-md 0">
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active"> </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <!-- <b>Last Updated:</b> -->
      <b>DepositId:</b> <b style="color: white;"><%=deposit._id%></b>
    </div>
  </div>

</div>


<form action="/editDeposit/<%=deposit._id %>?_method=PUT" method="POST">   
  <div class="row form-group mb-4">
    <div class="col">
      <label for="text">Payment Method</label>
      <input type="text" class="form-control" id="type" name="type" value=" <%=deposit.payment_method%> " placeholder="Payment Method" readonly required>
    </div>

    <div class="col">
      <label for="text">Amount</label>
      <input type="text" class="form-control" id="amount" name="amount" value=" <%=deposit.amount%> " placeholder="Amount" readonly required>
    </div>
  </div>

  <div class="row form-group mb-4">

  <div class="col">
    <label for="text">Deposit Status </label>
    <input type="text" class="form-control" id="status" name="status" value=" <%=deposit.status%> " placeholder="Available balance" required>
  </div>

</div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Deposit</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Deposit</button>

  </div>

</form>

</section>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a user record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the User record of <b class="fw-bold"> <%= deposit._id %> </b><br/>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/deleteDeposit/<%= deposit._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove Deposit</button>
        </form>
      </div>
    </div>
  </div>
</div>
